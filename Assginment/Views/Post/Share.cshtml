@model Post


<form action="Share" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">

                <h2>Post</h2><br>
                <h4>@Model.Message</h4>
                <input type="text" value="@Model.Users" name="second" id="second" hidden /><br />
                <input type="text" value="@Model.Message" name="message" id="message" hidden /><br /><br />
                <div class="col-md-10">
                    <label>Your User Name:</label><br />
                    <input type="text" name="first" id="first" /><br />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Share" class="btn btn-primary" />
            </div>
        </div>


    </div>
</form>




