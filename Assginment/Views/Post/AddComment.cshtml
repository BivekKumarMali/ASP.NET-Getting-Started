@model Comment


    <form action="AddComment" method="post">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">

                    <h2>Post</h2><br>
                    <h4>@ViewBag.message</h4>
                    <input type="text" value="@Model.User" name="user" id="user" hidden/><br />
                    <input type="number" value="@Model.Postid" name="postid" id="postid" hidden/><br /><br />
                    <div class="col-md-10">
                        <label>Enter Your Comment</label><br />
                        <textarea rows="6" cols="50" name="commm" id="commm"></textarea>

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="AddComment" class="btn btn-primary" />
                </div>
            </div>


        </div>
    </form>


